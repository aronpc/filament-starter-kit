{
    "name": "aronpc/filament-core-starter-kit",
    "type": "project",
    "description": "Complete Filament starter kit with Shield (Roles & Permissions) and Media Library.",
    "keywords": [
        "laravel",
        "filament",
        "admin-panel",
        "starter-kit",
        "shield",
        "permissions",
        "media-library"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.4",
        "archtechx/enums": "^1.1",
        "bezhansalleh/filament-shield": "^4.0",
        "dedoc/scramble": "^0.12.35",
        "dutchcodingcompany/filament-developer-logins": "^2.0",
        "filament/filament": "^4.1",
        "filament/spatie-laravel-media-library-plugin": "^4.0",
        "laravel/framework": "^12.0",
        "laravel/tinker": "^2.10.1",
        "lorisleiva/laravel-actions": "^2.9",
        "nunomaduro/essentials": "^1.0",
        "swisnl/filament-backgrounds": "^2.0",
        "unknow-sk/filament-logger": "^1.0"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^3.6",
        "driftingly/rector-laravel": "^2.0",
        "fakerphp/faker": "^1.23",
        "larastan/larastan": "^3.7",
        "laravel/boost": "^1.3",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "^1.18",
        "laravel/sail": "^1.41",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.6",
        "pestphp/pest": "^4.1",
        "pestphp/pest-plugin-laravel": "^4.0",
        "pestphp/pest-plugin-type-coverage": "^4.0",
        "rector/rector": "^2.2",
        "roave/security-advisories": "dev-latest"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "Utils\\Rector\\": "utils/rector/src",
            "Utils\\Rector\\Tests\\": "utils/rector/tests"
        }
    },
    "scripts": {
        "hooks": "test -d .git && git config core.hooksPath .hooks || true",
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan filament:upgrade"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi",
            "@hooks",
            "@update-ai-guidelines"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite --kill-others"
        ],
        "update-ai-guidelines": [
            "curl -o .claude/docs/00-spatie-laravel-php.md https://spatie.be/laravel-php-ai-guidelines.md",
            "@php artisan sync:ai-guidelines --force"
        ],
        "refactor": "./vendor/bin/rector",
        "fix": [
            "@refactor",
            "./vendor/bin/pint --parallel"
        ],
        "test:lint": [
            "./vendor/bin/pint --test --parallel"
        ],
        "test:unit": "./vendor/bin/pest -c phpunit.xml --parallel",
        "test:unit:coverage": "./vendor/bin/pest -c phpunit.xml --parallel --coverage",
        "test:types": "./vendor/bin/phpstan analyse --memory-limit=1G",
        "test:refactor": "./vendor/bin/rector process --dry-run",
        "test": [
            "@test:unit",
            "@test:types",
            "@test:refactor"
        ],
        "cache:clear": [
            "@php artisan optimize:clear",
            "@php artisan filament:optimize-clear"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
